<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageButtonCharacters"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:contentDescription="@string/image_description_characters"
        android:elevation="8dp"
        android:src="@mipmap/buttom_characters"
        app:civ_border_width="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="@string/characters"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageButtonEpisode"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image_description_episodes"
        android:elevation="8dp"
        android:src="@mipmap/ic_episode"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="@string/episodes"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageButtonLocations"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image_description_location"
        android:elevation="8dp"
        android:src="@mipmap/button_locations"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="@string/location"
        android:textColor="@color/white"
        android:textSize="20sp" />

</androidx.appcompat.widget.LinearLayoutCompat>